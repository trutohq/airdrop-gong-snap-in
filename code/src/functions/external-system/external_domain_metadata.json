{
  "schema_version": "v0.2.0",
  "record_types": {
    "issues": {
      "name": "Issues",
      "is_loadable": true,
      "fields": {
        "body": {
          "name": "body",
          "is_required": true,
          "type": "rich_text"
        },
        "creator": {
          "is_required": true,
          "type": "reference",
          "reference": {
            "refers_to": {
              "#record:users": {}
            }
          }
        },
        "owner": {
          "is_required": true,
          "type": "reference",
          "reference": {
            "refers_to": {
              "#record:users": {}
            }
          }
        },
        "title": {
          "name": "Title",
          "is_required": true,
          "type": "text",
          "text": {
            "min_length": 1
          }
        }
      }
    },
    "users": {
      "name": "Users",
      "fields": {
        "id": {
          "name": "ID",
          "is_required": true,
          "type": "text"
        },
        "emails": {
          "name": "Email",
          "is_required": true,
          "type": "array",
          "array": {
            "items": {
              "type": "object",
              "object": {
                "properties": {
                  "email": {
                    "name": "Email Address",
                    "type": "text",
                    "is_required": true
                  },
                  "is_primary": {
                    "name": "Is Primary",
                    "type": "boolean",
                    "is_required": true
                  }
                }
              }
            }
          }
        },
        "name": {
          "name": "Name",
          "is_required": true,
          "type": "text",
          "text": {
            "min_length": 1
          }
        }
      }
    }
  }
}